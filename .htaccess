# ============================================================
# Chandusoft Optimized .htaccess
# Clean URLs + SEO + Security + Stripe Webhook + Performance
# ============================================================
# ============================================================
# STRIPE WEBHOOK FIX ‚Äì Laragon Root to /public/webhook.php
# ============================================================
RewriteEngine On
RewriteBase /

# Handle both /webhook and /public/webhook.php
RewriteCond %{REQUEST_URI} ^/(public/)?webhook(\.php)?$ [NC]
RewriteRule ^(public/)?webhook(\.php)?$ public/webhook.php [L]

# Let Apache serve real files normally
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^ - [L]
# ------------------------------------------------------------
# üîí 1. SECURITY & ACCESS CONTROL
# ------------------------------------------------------------
<FilesMatch "(^\.|config\.php|db\.php|logger\.php|helpers\.php|auth\.php|composer\.(json|lock)|\.env)$">
  Require all denied
</FilesMatch>

Options -Indexes

<FilesMatch "^\.">
  Require all denied
</FilesMatch>

# ------------------------------------------------------------
# ‚öôÔ∏è 2. FORCE HTTPS (skip localhost + ngrok)
# ------------------------------------------------------------
RewriteCond %{HTTP_HOST} !localhost [NC]
RewriteCond %{HTTP_HOST} !ngrok [NC]
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ------------------------------------------------------------
# üß≠ 3. CLEAN URL REWRITES (.php REMOVAL)
# ------------------------------------------------------------
RewriteCond %{REQUEST_URI} !^/(public/)?webhook(\.php)?$ [NC]
RewriteCond %{REQUEST_URI} !^/app/(authenticate|register_handler)\.php$ [NC]
RewriteCond %{THE_REQUEST} \s/([^\s?]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

# ------------------------------------------------------------
# üõí 4. ROUTE DEFINITIONS
# ------------------------------------------------------------
RewriteRule ^public/catalog/?$ public/catalog.php [L,QSA]
RewriteRule ^public/catalog/page/([0-9]+)/?$ public/catalog.php?page=$1 [L,QSA]
RewriteRule ^public/catalog-item/?$ public/catalog-item.php [L,QSA]
RewriteRule ^public/send-enquiry/?$ public/send-enquiry.php [L,QSA]
RewriteRule ^public/cart/?$ public/cart.php [L,QSA]
RewriteRule ^public/checkout/?$ public/checkout.php [L,QSA]
RewriteRule ^public/place-order/?$ public/place-order.php [L,QSA]
RewriteRule ^payment-success/?$ public/payment-success.php [L,QSA]
RewriteRule ^payment-cancel/?$ public/payment-cancel.php [L,QSA]

# ------------------------------------------------------------
# üåê 5. MAIN SITE PAGES
# ------------------------------------------------------------
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ index [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(index|about|services|contact)$ $1.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)$ views/layout.php?page=$1 [L,QSA]

# ------------------------------------------------------------
# üõ†Ô∏è 6. ADMIN & AUTH ROUTES
# ------------------------------------------------------------
RewriteRule ^admin/login/?$ admin/login.php [L,QSA]
RewriteRule ^admin/logout/?$ admin/logout.php [L,QSA]
RewriteRule ^admin/pages/?$ admin/pages.php [L,QSA]
RewriteRule ^admin/admin-leads/?$ admin/admin-leads.php [L,QSA]
RewriteRule ^admin/catalog/?$ admin/catalog.php [L,QSA]
RewriteRule ^admin/catalog/new/?$ admin/catalog-new.php [L,QSA]
RewriteRule ^admin/catalog/archived/?$ admin/catalog-archived.php [L,QSA]
RewriteRule ^admin/catalog/(edit|delete|restore)/([0-9]+)/?$ admin/catalog-$1.php?id=$2 [L,QSA]
RewriteRule ^app/authenticate/?$ app/authenticate.php [L,QSA]
RewriteRule ^app/register/?$ app/register.php [L,QSA]
RewriteRule ^app/register_handler/?$ app/register_handler.php [L,QSA]
RewriteRule ^app/dashboard/?$ app/dashboard.php [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/([a-zA-Z0-9_-]+)$ admin/$1.php [L,QSA]

# ------------------------------------------------------------
# ‚ö° 7. PERFORMANCE (CACHING + COMPRESSION)
# ------------------------------------------------------------
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/html "access plus 1 hour"
</IfModule>

<FilesMatch "\.(js|css|png|jpg|jpeg|gif|webp|svg|woff2?)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# ------------------------------------------------------------
# üß± 8. SECURITY HEADERS
# ------------------------------------------------------------
<IfModule mod_headers.c>
  <FilesMatch "\.(woff2)$">
    Header add Link "<%{REQUEST_URI}e>; rel=preload; as=font; crossorigin"
  </FilesMatch>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "DENY"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# ------------------------------------------------------------
# üß© 9. ERROR HANDLING
# ------------------------------------------------------------
ErrorDocument 404 /public/404.php
ErrorDocument 500 /public/500.php
