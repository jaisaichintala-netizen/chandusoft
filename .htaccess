# ============================================================
# Chandusoft Optimized .htaccess
# Clean URLs + SEO + Performance (Mobile & Desktop)
# ============================================================

# Enable URL rewriting
RewriteEngine On
RewriteBase /

# ------------------------------------------------------------
# ðŸ”’ 1. SECURITY & ACCESS CONTROL
# ------------------------------------------------------------
# Hide sensitive files
<FilesMatch "(^\.|config\.php|db\.php|logger\.php|helpers\.php|auth\.php)$">
  Require all denied
</FilesMatch>

# Disable directory browsing
Options -Indexes

# Protect .env or hidden files
<FilesMatch "^\.">
  Require all denied
</FilesMatch>

# ------------------------------------------------------------
# ðŸ§­ 2. CLEAN URL REWRITES (.php removal)
# ------------------------------------------------------------

# --- 2.1 Redirect direct .php requests to extensionless URL ---
# Skip critical endpoints like authenticate.php and register_handler.php
RewriteCond %{REQUEST_URI} !^/app/(authenticate|register_handler)\.php$ [NC]
RewriteCond %{THE_REQUEST} \s/([^\s?]+)\.php[\s?] [NC]
RewriteRule ^ %1 [R=301,L]

# --- 2.2 Internally serve .php files for extensionless URLs ---
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

# ------------------------------------------------------------
# ðŸ›’ 3. ROUTE DEFINITIONS
# ------------------------------------------------------------

# Catalog routes
RewriteRule ^public/catalog/?$ public/catalog.php [L,QSA]
RewriteRule ^public/catalog/page/([0-9]+)/?$ public/catalog.php?page=$1 [L,QSA]
RewriteRule ^public/catalog-item/?$ public/catalog-item.php [L,QSA]
RewriteRule ^public/send-enquiry/?$ public/send-enquiry.php [L,QSA]
RewriteRule ^public/cart/?$ public/cart.php [L,QSA]
RewriteRule ^checkout/?$ public/checkout.php [L,QSA]
RewriteRule ^public/place-order/?$ public/place-order.php [L,QSA]

# Payment success / cancel
RewriteRule ^payment-success/?$ public/payment-success.php [L,QSA]
RewriteRule ^payment-cancel/?$ public/payment-cancel.php [L,QSA]

# Main site pages
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ /index [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(index|about|services|contact)$ $1.php [L,QSA]

# Dynamic slugs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)$ views/layout.php?page=$1 [L,QSA]

# Admin routes
RewriteRule ^admin/login/?$ admin/login.php [L,QSA]
RewriteRule ^admin/logout/?$ admin/logout.php [L,QSA]
RewriteRule ^admin/pages/?$ admin/pages.php [L,QSA]
RewriteRule ^admin/admin-leads/?$ admin/admin-leads.php [L,QSA]
RewriteRule ^admin/catalog/?$ admin/catalog.php [L,QSA]
RewriteRule ^admin/catalog/new/?$ admin/catalog-new.php [L,QSA]
RewriteRule ^admin/catalog/archived/?$ admin/catalog-archived.php [L,QSA]
RewriteRule ^admin/catalog/(edit|delete|restore)/([0-9]+)/?$ admin/catalog-$1.php?id=$2 [L,QSA]

# App routes (authentication, register, dashboard)
RewriteRule ^app/authenticate/?$ app/authenticate.php [L,QSA]
RewriteRule ^app/register/?$ app/register.php [L,QSA]
RewriteRule ^app/register_handler/?$ app/register_handler.php [L,QSA]
RewriteRule ^app/dashboard/?$ app/dashboard.php [L,QSA]

# Admin fallback
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^admin/([a-zA-Z0-9_-]+)$ admin/$1.php [L,QSA]

# ------------------------------------------------------------
# âš¡ 4. PERFORMANCE BOOST (CACHING + COMPRESSION)
# ------------------------------------------------------------

# Enable gzip / Brotli compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

<IfModule mod_brotli.c>
  BrotliCompressionQuality 6
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache static assets aggressively
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/html "access plus 1 hour"
</IfModule>

# Strong caching for immutable assets
<FilesMatch "\.(js|css|png|jpg|jpeg|gif|webp|svg|woff2?)$">
  Header set Cache-Control "public, max-age=31536000, immutable"
</FilesMatch>

# Allow proper MIME type for WebP
AddType image/webp .webp

# Serve WebP automatically when available
<IfModule mod_rewrite.c>
  RewriteCond %{HTTP_ACCEPT} image/webp
  RewriteCond %{REQUEST_FILENAME} (.+)\.(jpe?g|png)$
  RewriteCond %{DOCUMENT_ROOT}/%1.webp -f
  RewriteRule ^(.+)\.(jpe?g|png)$ $1.webp [T=image/webp,E=accept:1,L]
</IfModule>

# ------------------------------------------------------------
# ðŸš€ 5. PRELOAD + SECURITY HEADERS
# ------------------------------------------------------------
<IfModule mod_headers.c>
  <FilesMatch "\.(woff2)$">
    Header add Link "<%{REQUEST_URI}e>; rel=preload; as=font; crossorigin"
  </FilesMatch>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# ------------------------------------------------------------
# ðŸ§© 6. ERROR HANDLING
# ------------------------------------------------------------
ErrorDocument 404 /404.php
ErrorDocument 500 /500.php
